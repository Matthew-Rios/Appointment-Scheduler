<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="loginFormVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mattrios.login.LoginFormController">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="loginFormLabel" text="Login Form">
               <font>
                  <Font name="System Bold" size="48.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Label fx:id="userIDLabel" text="User ID">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" top="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="userIDField" prefHeight="40.0" prefWidth="540.0">
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="passwordLabel" text="Password">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="30.0" top="20.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passwordField" prefHeight="40.0">
         <VBox.margin>
            <Insets left="30.0" right="30.0" />
         </VBox.margin>
      </PasswordField>
      <Button fx:id="loginButton" maxWidth="540.0" mnemonicParsing="false" onAction="#loginButtonClicked" text="Login">
         <VBox.margin>
            <Insets left="30.0" top="20.0" />
         </VBox.margin>
      </Button>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="needAccessLabel" text="Need access?">
               <HBox.margin>
                  <Insets top="30.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Hyperlink fx:id="requestAccessHyperlink" onAction="#requestAccessHyperLinkClicked" text="Request now">
               <HBox.margin>
                  <Insets top="26.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="27.0" prefWidth="600.0">
         <children>
            <Label fx:id="userLocationLabel" alignment="TOP_LEFT" text=" ZoneID" />
         </children>
      </HBox>
   </children>
</VBox>
